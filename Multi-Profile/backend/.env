# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/multilogin

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRATION=7d

# Email Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password
FROM_NAME=MultiLogin
FROM_EMAIL=noreply@multilogin.com

# Profile Storage
PROFILE_STORAGE_PATH=./browser-profiles

# Cloud Storage (Optional)
CLOUD_STORAGE_ENABLED=false
CLOUD_STORAGE_PROVIDER=aws
# Add cloud storage credentials based on provider